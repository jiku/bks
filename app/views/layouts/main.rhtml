<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
	<title>
		<%=
			if @title then
				h @title
			else
				h controller.controller_name
			end
	-%>
	</title>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'substruct', 'subModal', :plugin => 'substruct' %>
	<%= stylesheet_link_tag '#main', 'main/navigation', '#main/product_chips', 'subModal' %>
	<%= stylesheet_link_tag 'main_bks/main', 'main_bks/basic', 'main_bks/layout', 'main_bks/header', 'main_bks/content', 'main_bks/search', 'main_bks/navigation', 'main_bks/product_list', 'main_bks/product_chips' %>
	<%= yield :header %>
</head>
<body>

	<div id="container">
		<div id="header">
			<div style="float: left;">
				<a href="/"><%= image_tag('public-ui/logo.gif', :alt => 'Keyboardsenteret') %></a>
			</div>

			<% if @customer && !@customer.new_record? %>
			<div id="customer_msg">
				<%= @customer.email_address %>
				<br/>
				<a href="/customers/logout">logg ut</a>
			</div>
			<% end %>
		
			<div id="searchbox">
				<form action="/store/search" method="post">
					<input type="image" src="/images/public-ui/buttons/search.jpg" style="float:right;"/>
					<input type="text" name="search_term" class="search_field" style="float:right;"/>
				</form>
			</div>
		
			<div class="clear"></div>
		</div>
		
		<div id="navigation">
			<div id="super">
				<ul class="navigation">
					<li class="<%= @cname == 'main' ? 'active' : '' %>"><a href="/store/">FORSIDE</a></li>
				</ul>
				<div id="links">
					<ul class="navigation" id="toplinks">
						<li><a href="/questions/ask">KONTAKT OSS</a></li>
						<li><a href="/customers/orders">SPOR ORDRE</a></li>
						<li><a href="/customers/wishlist">HUSKELISTE</a></li>
						<li><a href="/store/show_cart" class="submodal-600-400">HANDLEKURV</a></li>
					</ul>
				</div>

				<div class="clear"></div>
			</div>
		
		</div>


		<!-- Begin content body  -->
		<div id="contentBody">
		
			<% if flash[:notice] -%>
				<div id="flash">
					<div style="margin-bottom:0px;">
						<%= get_markdown(flash[:notice]) %>
					</div>
					<p style="margin:0px;">
						<a href="#" class="button" style="width:80px;" onmousedown="new Effect.Fade($('flash'))">Lukk</a>
					</p>
				</div>
			<% end -%>
		
			<%= yield %>
		</div>
		<!-- End content body -->


		<div id="footer">
			<ul class="navigation">
				<li><a href="/">Forside</a></li>
				<li><a href="/questions/faq">FAQ</a></li>
				<li><a href="/questions/ask">Kontakt oss</a></li>
				<li><a href="/blog">Blogg</a></li>
				<li><a href="/customers/wishlist">Huskeliste</a></li>
				<li><a href="/store/show_cart" class="submodal-600-400">Handlekurv</a></li>
			</ul>
		</div>
		<div class="clear"></div>
		<br/>
	
</div>
<!-- End container -->

</body>
</html>